<div class="admin-sidebar am-offcanvas" id="admin-offcanvas">
    <div class="am-offcanvas-bar admin-offcanvas-bar">
        <ul class="am-list admin-sidebar-list">
            <li><a <%if(currentPage === 'index'){ %>class="current"<%}%> href="/admin">首页</a></li>
          
            <li class="admin-parent">
                <a class="am-cf" data-am-collapse="{target:'#collapse-product'}">产品列表<span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                <ul class="am-list am-collapse admin-sidebar-sub <%if(currentTag === 'product' && productMethodId == '3'){ %>am-in<%}%>" id="collapse-product">
                    <li><a href="/admin/product?onsale=1&product-method-id=3" <%if(currentPage === 'product-index' && productMethodId == '3' && onsale == 1){ %>class="current"<%}%> >上架产品列表</a></li>
                    <li><a href="/admin/product?onsale=2&product-method-id=3" <%if(currentPage === 'product-index' && productMethodId == '3' && onsale == 2){ %>class="current"<%}%> >未上架产品列表</a></li>
                    <li><a href="/admin/product?is-short-stock=true&product-method-id=3" <%if(currentPage === 'product-index' && isShortStock && productMethodId == '3'){ %>class="current"<%}%> >缺货产品列表</a></li>
                    <li><a href="/admin/product?product-method-id=3" <%if(currentPage === 'product-index' && productMethodId == '3' && onsale == 0 && !isShortStock){ %>class="current"<%}%> >所有产品列表</a></li>
                </ul>
            </li>

            <li class="admin-parent">
                <a class="am-cf" data-am-collapse="{target:'#collapse-custom-product'}">精品列表<span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                <ul class="am-list am-collapse admin-sidebar-sub <%if(currentTag === 'product' && productMethodId == '21'){ %>am-in<%}%>" id="collapse-custom-product">
                    <li><a href="/admin/product?onsale=1&product-method-id=21" <%if(currentPage === 'product-index' && productMethodId == '21' && onsale == 1){ %>class="current"<%}%> >上架产品列表</a></li>
                    <li><a href="/admin/product?onsale=2&product-method-id=21" <%if(currentPage === 'product-index' && productMethodId == '21' && onsale == 2){ %>class="current"<%}%> >未上架产品列表</a></li>
                    <li><a href="/admin/product?is-short-stock=true&product-method-id=21" <%if(currentPage === 'product-index' && isShortStock && productMethodId == '21'){ %>class="current"<%}%> >缺货产品列表</a></li>
                    <li><a href="/admin/product?product-method-id=21" <%if(currentPage === 'product-index' && productMethodId == '21' && onsale == 0 && !isShortStock){ %>class="current"<%}%> >所有产品列表</a></li>
                </ul>
            </li>

            <li class="admin-parent">
                <a class="am-cf" data-am-collapse="{target:'#collapse-product-settings'}">产品设置<span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                <ul class="am-list am-collapse admin-sidebar-sub <%if(currentTag === 'product-settings'){ %>am-in<%}%>" id="collapse-product-settings">
                    <li><a href="/admin/product-category" <%if(currentPage === 'product-category'){ %>class="current"<%}%>>产品分类列表</a></li>
                    <li><a href="/admin/product-method" <%if(currentPage === 'product-method'){ %>class="current"<%}%>>产品类型列表</a></li>
                    <li><a href="/admin/product-brand" <%if(currentPage === 'product-brand'){ %>class="current"<%}%>>产品品牌列表</a></li>
                    <li><a href="/admin/product-tag" <%if(currentPage === 'product-tag'){ %>class="current"<%}%>>产品标签列表</a></li>
                    <li><a href="/admin/product-group" <%if(currentPage === 'product-group'){ %>class="current"<%}%>>产品组合类型列表</a></li>
                </ul>
            </li>
            
            <li class="admin-parent">
                <a class="am-cf" data-am-collapse="{target:'#collapse-tools'}">工具/附件<span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                <ul class="am-list am-collapse admin-sidebar-sub <%if(currentTag === 'product'){ %>am-in<%}%>" id="collapse-tools">
                    <li><a href="/admin/product" <%if(currentPage === 'attachment-upload'){ %>class="current"<%}%> >附件上传</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>