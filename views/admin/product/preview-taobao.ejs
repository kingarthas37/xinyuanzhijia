<!DOCTYPE html>
<html>
<head>
    <% include ../partials/meta %>
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

    <% include ../partials/header %>

    <div class="product-preview-page">

        <p class="small-screen-hide">
            <button type="button" class="am-btn am-btn-primary btn-copy">复制代码</button>
            <button type="button" class="am-btn am-btn-success btn-shot" disabled="disabled">生成淘宝详情图片</button>
        </p>

        <hr class="small-screen-hide"/>
        
        <h4><%- name %></h4>

        <hr/>
        
        <div class="preview-content">
           
            <div>
                
                <div><%if(banner) { %><img src="<%=banner%>"/><%}%></div>

                <% if (name) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2ehN0hFXXXXaIXpXXXXXXXXXX_!!42879206.png"></div>
                <%- name %>
                <% } %>

                <% if (review) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2XdJYhFXXXXbhXpXXXXXXXXXX_!!42879206.png"></div>
                <%- review %>
                <% } %>

                <% if (property) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB23rh5hFXXXXXBXpXXXXXXXXXX_!!42879206.png"></div>
                <%- property %>
                <% } %>

                <% if (instruction) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2w3VZhFXXXXaCXpXXXXXXXXXX_!!42879206.png"/> </div>
                <%- instruction %>
                <% } %>

                <% if (detail) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2LWd4hFXXXXXqXpXXXXXXXXXX_!!42879206.png"/> </div>
                <%- detail %>
                <% } %>

                <% if (use) { %>
                <div><img src="https://img.alicdn.com/imgextra/i1/42879206/TB2bUxTpVXXXXanXpXXXXXXXXXX_!!42879206.png"/> </div>
                <%- use %>
                <% } %>

                <% if (detailImage) { %>
                <div><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2DOWrhFXXXXXiXXXXXXXXXXXX_!!42879206.png"/> </div>
                <%- detailImage %>
                <% } %>

            </div>
            
        </div>

    </div>
    
    <div class="am-modal am-modal-alert" tabindex="-1" id="modal-shot-success">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">生成成功!</div>
            <div class="am-modal-bd">
                请在/shot目录中查看
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn">确定</span>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>
    <% include ../partials/js %>

    <script type="text/javascript">
        $(function() {
            var productPreview = require('product-preview');
            productPreview();
        });
    </script>

</body>
</html>