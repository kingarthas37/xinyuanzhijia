<!DOCTYPE html>
<html>
<head>
    <% include ../partials/meta %>
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<div class="product-preview-page">

    <div class="cf">
        <div class="l">
            <div class="small-screen-hide">
                <button type="button" class="am-btn am-btn-success btn-shot" disabled="disabled">生成淘宝详情图片</button>
                <% if(product.get('groups').length) {%>
                    <% for(var i=0;i<product.get('groups').length;i++) {%>
                        <% if(product.get('groups')[i].products.length) {%>
                            <button type="button" class="am-btn am-btn-success btn-shot-recommend" disabled="disabled">生成推荐产品图片</button>
                        <%}%>
                    <%}%>
                <% } %>
            </div>
        </div>
        <div class="r">
            <label><input class="disable-watermark" type="checkbox"> 不显示水印</label>
        </div>
    </div>

    <hr class="small-screen-hide"/>

    <h4><%- name %></h4>

    <hr/>
    
    <div class="content">
        
        <div class="preview-content">

            <%if(banner) { %><section class="section-banner"><img src="<%= banner.get('bannerUrl')%>"/></section><%}%>
            
            <% if (name) { %>
            <section><img src="https://img.alicdn.com/imgextra/i3/42879206/TB2zLWap80lpuFjSszdXXcdxFXa_!!42879206.png"></section>
            <div><%- name %></div>
            <% } %>

            <% if (detail) { %>
            <section><img src="https://img.alicdn.com/imgextra/i2/42879206/TB29I9fp9tkpuFjy0FhXXXQzFXa_!!42879206.png"/></section>
            <div><%- detail %></div>
            <% } %>
            
            <% if (review) { %>
            <section><img src="https://img.alicdn.com/imgextra/i4/42879206/TB2CWsrs0RopuFjSZFtXXcanpXa_!!42879206.png"></section>
            <div><%- review %></div>
            <% } %>
    
            <% if (property) { %>
            <section><img src="https://img.alicdn.com/imgextra/i1/42879206/TB2u5VUp3NlpuFjy0FfXXX3CpXa_!!42879206.png"></section>
            <div><%- property %></div>
            <% } %>

            <% if (use) { %>
            <section><img src="https://img.alicdn.com/imgextra/i1/42879206/TB2DlfQs9VmpuFjSZFFXXcZApXa_!!42879206.png"/></section>
            <div><%- use %></div>
            <% } %>
            
            <% if (instruction) { %>
            <section><img src="https://img.alicdn.com/imgextra/i2/42879206/TB2nVH3AxhmpuFjSZFyXXcLdFXa_!!42879206.png"/></section>
            <div><%- instruction %></div>
            <% } %>
    
            <% if (detailImage) { %>
            <section><img src="https://img.alicdn.com/imgextra/i2/42879206/TB2jfeTp88lpuFjSspaXXXJKpXa_!!42879206.png"/></section>
            <div><%- detailImage %></div>
            <% } %>

        </div>

        <% if(product.get('groups').length) {%>
            <% for(var i=0;i<product.get('groups').length;i++) {%>
                <% if(product.get('groups')[i].products.length) {%>
                    <div><img src="https://img.alicdn.com/imgextra/i4/42879206/TB2Dw47p9BjpuFjSsplXXa5MVXa_!!42879206.png"></div>
                    <div class="recommend-content">
            
                    </div>
                    <hr>
                    <div class="am-form">
                        <div class="form-group">
                            <label>生成代码:</label>
                            <textarea class="recommend-code" rows="3"></textarea>
                            <p>
                                <button type="button" class="am-btn am-btn-primary btn-recommend-code">生成淘宝推荐产品代码</button>
                                <button type="button" class="am-btn am-btn-primary btn-recommend-code-copy">复制淘宝推荐产品代码</button>
                            </p>
                            <div class="recommend-code-hidden"></div>
                        </div>
                    </div>
                <%}%>
            <%}%>
        <% } %>
        
    </div>
    
</div>


<div class="am-modal am-modal-alert" tabindex="-1" id="modal-shot-success">
    <div class="am-modal-dialog">
        <div class="am-modal-hd">生成成功!</div>
        <div class="am-modal-bd">
            请在/shot目录中查看
        </div>
        <div class="am-modal-footer">
            <span class="am-modal-btn">确定</span>
        </div>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
    $(function() {
        var productPreview = require('product-preview');
        productPreview.init({
            watermark:'<%= watermark.main %>'
        });

        if($('.btn-shot-recommend').length) {
            productPreview.recommendProducts(JSON.parse('<%- groups %>'),JSON.parse('<%- groupsName %>'));
        }
    });
</script>
</body>
</html>