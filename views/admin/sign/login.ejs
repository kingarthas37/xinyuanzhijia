<!DOCTYPE html>
<html>
<head>
  <% include ../partials/meta %>
  <title><%= title %></title>
  <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<% if (flash.success != '') { %>
<div class="am-alert am-alert-success">
  <p><%= flash.success %></p>
</div>
<% } %>

<div class="am-g admin-sign-page">
  
  <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">

    <legend><a href="/admin/login">管理员登录</a></legend>
    
    <form id="form-login" method="post" class="am-form">
      <label for="username">请输入邮箱:</label>
      <input type="email" id="username" name="username" placeholder="请输入邮箱" required>
      <br>
      <label for="password">请输入密码:</label>
      <input type="password" id="password" name="password" placeholder="请输入密码" required>
      <hr/>
      <div class="am-cf">
        <input type="submit" id="submit" name="submit" value="管理员登录" class="am-btn am-btn-primary">
      </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
  $(function() {
    var sign = require('sign');
    sign.loginFun();
  });
</script>
</body>
</html>