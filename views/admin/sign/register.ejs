<!DOCTYPE html>
<html>
<head>
  <% include ../partials/meta %>
  <title><%= title %></title>
  <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<% if (flash.success != '') { %>
<div class="am-alert am-alert-success">
  <p><%= flash.success %></p>
</div>
<% } %>

<div class="am-g admin-sign-page">
  
  <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">

    <legend><a href="/sign/register">新用户注册</a></legend>

    <form id="form-register" method="post" class="am-form">
      <label for="username">注册邮箱:</label>
      <input type="email" id="username" name="username" placeholder="请输入邮箱" required>
      <br>
      <label for="password">密码:</label>
      <input type="password" id="password" name="password" placeholder="请输入密码" required>
      <hr/>
      <div class="am-cf">
        <input type="submit" name="" value="管理员注册" class="am-btn am-btn-primary am-btn-sm am-fl">
      </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
  $(function() {
    var sign = require('sign');
    sign.registerFun();
  });
</script>
</body>
</html>