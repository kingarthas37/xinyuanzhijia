<!DOCTYPE html>
<html>
<head>
    <% include ../partials/meta %>
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<div class="am-cf admin-main">

    <!-- sidebar start -->
    <% include ../partials/sidebar %>
    <!-- sidebar end -->

    <!-- content start -->
    <div class="admin-content admin-product-brand-page">

        <div class="am-cf am-padding">
            <div class="am-fl am-cf"><strong><a href="/admin/article">文章列表</a></strong> / <a href="/admin/article/edit">编辑文章</a></div>
        </div>

        <div class="am-g">
            <div class="am-u-sm-12">

                <form id="form-add-product" class="am-form" method="post" >

                    <!--  course template start -->
                    <div class="am-form-group">
                        <label for="article-category" >文章分类<i>*</i></label>
                        <select name="articleCategoryId" id="article-category">
                            <option data-info="" value="">选择分类</option>
                            <% for (var i = 0; i < articleCategory.length; i++) { %>
                            <option <% if (articleCategory[i].get('articleCategoryId') == article.get('articleCategoryId')) { %>selected<% } %> value="<%= articleCategory[i].get('articleCategoryId')%>"><%= articleCategory[i].get('name')%></option>
                            <% } %>
                        </select>
                    </div>
                    <!--  course template end -->

                    <hr/>

                    <!-- name start -->
                    <div class="am-form-group">
                        <label for="name">文章名称:</label>
                        <input id="name" name="name" type="text" value="<%= article.get('name') %>" />
                    </div>
                    <!-- name end -->

                    <hr/>

                    <!-- content start -->
                    <div class="am-form-group">
                        <label for="content">文章详情<small>(md5)</small>:</label>
                        <textarea id="content" name="content"><%= article.get('content') %></textarea>
                    </div>
                    <!-- content end -->

                    <!-- content start -->
                    <div class="am-form-group">
                        <label for="content">淘宝链接 <small>(md5)</small>:</label>
                        <textarea id="taoBaoLink" name="taoBaoLink" rows="5"><%= article.get('taoBaoLink') %></textarea>
                    </div>
                    <!-- content end -->

                    <!-- images start -->
                    <div class="am-form-group">
                        <label for="image">文章图片：</label>
                        <div class="upload-content">
                            <iframe class="upload" src="/admin/article/upload" frameborder="0"></iframe>
                        </div>
                        <ul class="image-list"></ul>
                        <hr/>
                        <input id="image" name="image" type="text" value="<%= article.get('image')%>" placeholder="输入文章图片"/>
                    </div>
                    <!-- images end -->

                    <!-- video start -->
                    <div class="am-form-group">
                        <label for="video-link">文章视频：</label>
                        <div class="upload-content">
                            <iframe class="upload" src="/admin/article/upload" frameborder="0"></iframe>
                        </div>
                        <ul class="video-list"></ul>
                        <hr/>
                        <input id="video-link" name="video-link" type="text" value="<%= article.get('videoLink')%>" placeholder="输入文章视频"/>
                    </div>
                    <!-- video end -->

                    <div class="am-form-group">
                        <button id="submit" type="submit" class="am-btn am-btn-primary">保存</button>
                        <button type="button" class="am-btn am-btn-primary" onclick="history.back(-1);">返回</button>
                    </div>

                </form>

            </div>
        </div>

    </div>
    <!-- content end -->

</div>


<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
    $(function () {
        var article = require('article');
        article.indexFun();
    });
</script>
</body>
</html>