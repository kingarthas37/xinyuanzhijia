<header class="am-topbar am-topbar-fixed-top">
    <div class="am-container admin-order-page">
        
        <h1 class="am-topbar-brand">
            <b>发货管理系统</b>
        </h1>

        <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-secondary am-show-sm-only"
                data-am-collapse="{target: '#collapse-head'}"><span class="am-sr-only">导航切换</span> <span
                class="am-icon-bars"></span></button>
        
        <div class="am-collapse am-topbar-collapse" id="collapse-head">
          
            <ul class="am-nav am-nav-pills am-topbar-nav">

                <li class="am-dropdown" data-am-dropdown>
                <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">采购管理 <span class="am-icon-caret-down"></span></a>
                <ul class="am-dropdown-content">
                        <li <% if (currentPage === 'purchase') { %> class="am-active" <% } %> ><a href="/order/purchase">采购订单管理(默认)</a></li>
                        <li <% if (currentPage === 'purchase-etsy') { %> class="am-active" <% } %> ><a href="/order/purchase?site-type=etsy">采购订单管理(Etsy.com)</a></li>
                        <li <% if (currentPage === 'purchase-ebay') { %> class="am-active" <% } %> ><a href="/order/purchase?site-type=ebay">采购订单管理(Ebay.com)</a></li>
                        <li class="am-divider"></li>
                        <li <% if (currentPage === 'purchase-contact') { %> class="am-active" <% } %> ><a href="/order/purchase-contact">采购网站管理(默认)</a></li>
                        <li <% if (currentPage === 'purchase-contact-etsy') { %> class="am-active" <% } %> ><a href="/order/purchase-contact?site-type=etsy">采购网站管理(Etsy.com)</a></li>
                        <li <% if (currentPage === 'purchase-contact-ebay') { %> class="am-active" <% } %> ><a href="/order/purchase-contact?site-type=ebay">采购网站管理(Ebay.com)</a></li>
                </ul>
                </li>

            <li class="am-dropdown" data-am-dropdown>
                <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">订单管理 <span class="am-icon-caret-down"></span></a>
                <ul class="am-dropdown-content">
                    <li <% if (currentPage === 'order') { %> class="am-active" <% } %> ><a href="/order/order">发货订单管理</a></li>
                    <li <% if (currentPage === 'ship-order') { %> class="am-active" <% } %> ><a href="/order/ship-order?limit=500">转运订单管理</a></li>
                    <li <% if (currentPage === 'customer') { %> class="am-active" <% } %> ><a href="/order/customer">用户/收件人管理</a></li>
                </ul>
            </li>
                
                <li class="am-dropdown" data-am-dropdown>
                    <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">工具 <span class="am-icon-caret-down"></span></a>
                    <ul class="am-dropdown-content">
                        <li <% if (currentPage === 'spent') { %> class="am-active" <% } %> ><a href="/order/spent">收入统计</a></li>
                        <li <% if (currentPage === 'identity') { %> class="am-active" <% } %> ><a href="/order/identity">身份证管理</a></li>
                    </ul>
                </li>
                
            </ul>

            <% if (user) { %>
            <ul class="am-topbar-right am-nav am-nav-pills am-topbar-nav">
            <li class="am-dropdown" data-am-dropdown>
                <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">我的账户 <span class="am-icon-caret-down"></span></a>
                <ul class="am-dropdown-content">
                    <li><a href="javascript:;"><%= user.attributes.username %></a></li>
                    <li><a href="/admin/logout">退出登录</a></li>
                </ul>
            </li>
            </ul>
            <% } else { %>
            <div class="am-topbar-right">
            <a class="am-btn am-btn-primary am-topbar-btn am-btn-sm" href="/login"><span class="am-icon-user"></span> 登录</a>
            </div>
            <% } %>

        </div>
    </div>
</header>